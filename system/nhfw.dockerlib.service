[Unit]
Description=NodeHome Firewall Docker Container Watcher
After=network-online.target
 
[Service]
Type=simple
Environment=PYTHONPATH=$PYTHONPATH:/opt/h42-nhfw
ExecStart=/usr/bin/python3 -m nhfw.dockerlib
PIDFile=/run/nhfw.dockerlib.pid
Restart=on-failure
TimeoutStopSec=300
 
[Install]
WantedBy=multi-user.target